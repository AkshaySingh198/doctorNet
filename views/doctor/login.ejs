<% layout('layout') -%>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="feature-icon mx-auto mb-3">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Doctor Login</h2>
                        <p class="text-muted">Welcome back! Please sign in to your account</p>
                    </div>

                    <form action="/doctor/login" method="POST">
                        <div class="mb-4">
                            <label for="phoneNumber" class="form-label fw-semibold">
                                <i class="fas fa-phone me-2 text-primary"></i>Phone Number
                            </label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" required>
                            <div class="form-text">Enter the phone number you used during registration</div>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Sign In
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">Don't have an account? 
                                <a href="/doctor/register" class="text-primary fw-semibold text-decoration-none">
                                    <i class="fas fa-user-md me-1"></i>Register here
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
