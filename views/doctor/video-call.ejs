<% layout('layout') -%>

    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- Video Call Interface -->
            <div class="col-12 h-100 d-flex flex-column">
                <!-- Header -->
                <div class="bg-dark text-white p-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">
                            <i class="fas fa-video me-2"></i>Video Consultation
                        </h4>
                        <small id="callStatus">Connecting...</small>
                    </div>
                    <div>
                        <button class="btn btn-outline-light btn-sm me-2" id="toggleMute">
                            <i class="fas fa-microphone"></i>
                        </button>
                        <button class="btn btn-outline-light btn-sm me-2" id="toggleVideo">
                            <i class="fas fa-video"></i>
                        </button>
                        <button class="btn btn-danger btn-sm" id="endCall">
                            <i class="fas fa-phone-slash"></i>
                        </button>
                    </div>
                </div>

                <!-- Video Container -->
                <div class="flex-grow-1 position-relative bg-dark">
                    <!-- Remote Video (Patient) -->
                    <div class=" w-70 h-70 d-flex justify-content-center align-items-center">
                        <video id="remoteVideo" autoplay playsinline class="w-70 h-70" style="object-fit: cover;">
                            <p>Your browser doesn't support video playback.</p>
                        </video>
                    </div>

                    <!-- Local Video (Doctor) -->
                    <div class="position-absolute"
                        style="top: 20px; right: 20px; width: 200px; height: 150px; border: 2px solid #fff; border-radius: 10px; overflow: hidden;">
                        <video id="localVideo" autoplay playsinline muted class="w-100 h-100"
                            style="object-fit: cover;">
                            <p>Your browser doesn't support video playback.</p>
                        </video>
                    </div>

                    <!-- Connection Status Overlay -->
                    <div id="connectionStatus"
                        class="position-absolute top-50 start-50 translate-middle text-center text-white"
                        style="display: none;">
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h5>Connecting to patient...</h5>
                        <p class="mb-0">Please wait while we establish the connection</p>
                    </div>

                    <!-- Call Controls Overlay -->
                    <div class="position-absolute bottom-0 start-0 w-100 p-4">
                        <div class="d-flex justify-content-center gap-3">
                            <button class="btn btn-outline-light btn-lg rounded-circle" id="muteBtn">
                                <i class="fas fa-microphone"></i>
                            </button>
                            <button class="btn btn-outline-light btn-lg rounded-circle" id="videoBtn">
                                <i class="fas fa-video"></i>
                            </button>
                            <button class="btn btn-danger btn-lg rounded-circle" id="hangupBtn">
                                <i class="fas fa-phone-slash"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div id="chatPanel" class="bg-light border-top" style="height: 200px;">
        <div class="p-3">
            <h6 class="mb-3">Chat during Call</h6>
            <div id="chatMessages" class="border rounded p-2 mb-3"
                style="height: 120px; overflow-y: auto; background: white;">
            </div>
            <div class="input-group" style="display: flex; gap: 5px;">
                <input type="text" class="form-control" id="chatInput" placeholder="Type your message...">
                <button class="btn btn-primary" id="sendMessage">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Call Settings Modal -->
    <div class="modal fade" id="callSettingsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Call Settings</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Camera</label>
                        <select class="form-select" id="cameraSelect">
                            <option value="">Select Camera</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Microphone</label>
                        <select class="form-select" id="microphoneSelect">
                            <option value="">Select Microphone</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Speaker</label>
                        <select class="form-select" id="speakerSelect">
                            <option value="">Select Speaker</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="applySettings">Apply Settings</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">Call Error</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="errorMessage">An error occurred during the call.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="location.href='/doctor/dashboard'">Return
                        Dashboard</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/video-call.js"></script>

