<% layout('layout') -%>

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">Welcome back, <%= patient.name %>!</h2>
                    <p class="text-muted mb-0">Manage your health and appointments</p>
                </div>
                <div>
                    <a href="/patient/logout" class="btn btn-outline-danger">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Quick Actions -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-grid">
                                <a href="/patient/home" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-home me-2"></i>
                                    Go to Main Dashboard
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <button class="btn btn-outline-success btn-lg" onclick="showHealthIssueModal()">
                                    <i class="fas fa-heartbeat me-2"></i>
                                    Update Health Issue
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <button class="btn btn-outline-info btn-lg" onclick="showPrescriptionModal()">
                                    <i class="fas fa-upload me-2"></i>
                                    Upload Prescription
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid">
                                <button class="btn btn-outline-warning btn-lg" onclick="showEmergencyModal()">
                                    <i class="fas fa-ambulance me-2"></i>
                                    Emergency Call
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Patient Info -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Your Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Name:</strong> <%= patient.name %>
                    </div>
                    <div class="mb-3">
                        <strong>Age:</strong> <%= patient.age %> years
                    </div>
                    <div class="mb-3">
                        <strong>Gender:</strong> <%= patient.gender %>
                    </div>
                    <div class="mb-3">
                        <strong>Phone:</strong> <%= patient.phoneNumber %>
                    </div>
                    <div class="mb-3">
                        <strong>Aadhaar:</strong> <%= patient.aadhaarNumber %>
                    </div>
                    <% if (patient.currentHealthIssue) { %>
                        <div class="mb-3">
                            <strong>Current Health Issue:</strong>
                            <p class="text-muted mt-1"><%= patient.currentHealthIssue %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Recent Appointments</h5>
                </div>
                <div class="card-body">
                    <% if (patient.appointments && patient.appointments.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Doctor</th>
                                        <th>Specialization</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% patient.appointments.slice(0, 5).forEach(function(appointment) { %>
                                        <tr>
                                            <td><%= appointment.doctorName %></td>
                                            <td><%= appointment.specialization %></td>
                                            <td><%= new Date(appointment.appointmentDate).toLocaleDateString() %></td>
                                            <td>
                                                <span class="badge bg-<%= appointment.status === 'Scheduled' ? 'primary' : appointment.status === 'Completed' ? 'success' : 'danger' %>">
                                                    <%= appointment.status %>
                                                </span>
                                            </td>
                                            <td><%= appointment.notes || 'No notes' %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times text-muted" style="font-size: 48px;"></i>
                            <p class="text-muted mt-3">No appointments yet</p>
                            <a href="/patient/home" class="btn btn-primary">Book Your First Appointment</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Health Issue Modal -->
<div class="modal fade" id="healthIssueModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-heartbeat me-2"></i>Update Health Issue</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="healthIssueForm">
                    <div class="mb-3">
                        <label for="healthIssue" class="form-label">Current Health Issue</label>
                        <textarea class="form-control" id="healthIssue" name="healthIssue" rows="4" placeholder="Describe your current health concern..."><%= patient.currentHealthIssue || '' %></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateHealthIssue()">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Prescription Upload Modal -->
<div class="modal fade" id="prescriptionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-upload me-2"></i>Upload Prescription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="prescriptionForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="prescription" class="form-label">Select Prescription File</label>
                        <input type="file" class="form-control" id="prescription" name="prescription" accept=".pdf,.jpg,.jpeg,.png" required>
                        <div class="form-text">Supported formats: PDF, JPG, JPEG, PNG</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="uploadPrescription()">Upload</button>
            </div>
        </div>
    </div>
</div>

<!-- Emergency Modal -->
<div class="modal fade" id="emergencyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-ambulance me-2"></i>Emergency Services</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Emergency Alert!</strong> If this is a life-threatening emergency, call 108 immediately.
                </div>
                <div class="d-grid gap-2">
                    <a href="tel:108" class="btn btn-danger btn-lg">
                        <i class="fas fa-phone me-2"></i>
                        Call Emergency (108)
                    </a>
                    <a href="tel:102" class="btn btn-warning btn-lg">
                        <i class="fas fa-ambulance me-2"></i>
                        Call Ambulance (102)
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showHealthIssueModal() {
    new bootstrap.Modal(document.getElementById('healthIssueModal')).show();
}

function showPrescriptionModal() {
    new bootstrap.Modal(document.getElementById('prescriptionModal')).show();
}

function showEmergencyModal() {
    new bootstrap.Modal(document.getElementById('emergencyModal')).show();
}

function updateHealthIssue() {
    const healthIssue = document.getElementById('healthIssue').value;
    
    fetch('/patient/update-health-issue', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ healthIssue })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            bootstrap.Modal.getInstance(document.getElementById('healthIssueModal')).hide();
            location.reload();
        } else {
            alert('Failed to update health issue');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to update health issue');
    });
}

function uploadPrescription() {
    const formData = new FormData(document.getElementById('prescriptionForm'));
    
    fetch('/patient/upload-prescription', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            bootstrap.Modal.getInstance(document.getElementById('prescriptionModal')).hide();
            alert('Prescription uploaded successfully!');
            location.reload();
        } else {
            alert('Failed to upload prescription');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to upload prescription');
    });
}
</script>
